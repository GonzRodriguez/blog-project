<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>


<% post.slice().reverse().forEach(function(post){ %>
<div class="container mt-4">
<div class="card">
  <div class="card-image">
    <figure class="image is-2by1">
      <% if(!post.img) {%>
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
      <% } %>
      <% if(post.img) {%>
      <img src="<%= post.img %>" alt="Placeholder image">

      <% } %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <a class="link" href="/user-profile/<%= post.authorId %>">Created By<strong> <%= post.author %></strong></a>

      </div>
    </div>

    <div class="content">
      <form action="/posts/:postId" method="POST"></form>
      
      <h1><%=post.title%></h1>
      <p><%=post.content.substring(0, 800)%> <a class="link" name="postName" value="<% post %>" href="/posts/<%=post._id%>">
         <strong></strong> ...More</a></p>
          <div class="text-left">
            <time datetime="2016-1-1" class="small-text"><%= createdAt.toLocaleDateString() %></time>
          </div>
        </form>
        <hr>
      </div>
    </div>
  </div>
</div>
<% }); %>
  



 



<%- include('partials/footer'); -%>
